    "version": "0.2.0",
    "configurations": [
    {
    "type": "node",
    "request": "launch",
    "name": "Mocha Tests",
    "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
    "args": ["-u", "tdd", "--timeout", "999999", "--colors", "${workspaceFolder}/test/**/**.spec.js"],
    "internalConsoleOptions": "openOnSessionStart", 
    "env": {
        "REGION": "us-east-1",
        "LOGGER_ROOT_LEVEL": "DEBUG",
        "AWAKEN_FUNCTION": "true",
        "API_DOMAIN": "http://localhost",
        "DEFAULT_CLIENT_REST_TIMEOUT": "20",
    }
    }
    ]
   }